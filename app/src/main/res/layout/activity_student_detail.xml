<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_student_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#00ee77"
    tools:context="com.kayvoh.must.StudentDetail">


    <ImageView
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="false"
        android:id="@+id/logo"
        android:layout_alignParentEnd="true"
        android:layout_height="0dp"
        android:layout_width="0dp" />

    <TextView
        android:text="RegNo: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pic"
        android:id="@+id/stdRegNo"
        android:layout_alignParentEnd="true"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_marginTop="15dp" />

    <TextView
        android:text="Name:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stdRegNo"
        android:layout_marginTop="15dp"
        android:id="@+id/stdName"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stdName"
        android:layout_alignEnd="@+id/stdRegNo"
        android:layout_marginTop="32dp"
        android:id="@+id/stdStatus"
        android:textColor="#900"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>

    <Button
        android:text="Confirm"
        android:textColor="#090"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stdStatus"
        android:layout_alignParentStart="true"
        android:id="@+id/stdAcceptButton"
        android:layout_marginTop="15dp"
        android:enabled="false"/>

    <Button
        android:text="Go Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#f00"
        android:layout_alignBottom="@+id/stdAcceptButton"
        android:layout_alignParentEnd="true"
        android:id="@+id/stdHomeButton" />

    <ImageView
        app:srcCompat="@drawable/must"
        android:id="@+id/pic"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>