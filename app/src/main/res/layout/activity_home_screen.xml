<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#00ee77"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#00ee77"
    tools:context="com.kayvoh.must.HomeScreen">

    <TextView
        android:text="Unit Code: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/homeUnitCode"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="10dp"
        android:layout_alignParentEnd="true"
        android:textColor="#000"
        android:textSize="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:text="Unit Name: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homeUnitCode"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/homeUnitName"
        android:textColor="#000"
        android:textSize="15dp" />

    <TextView
        android:text="Course: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homeUnitName"
        android:layout_alignParentStart="true"
        android:id="@+id/homeCourse"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#000"
        android:textSize="15dp" />

    <TextView
        android:text="Semester: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homeCourse"
        android:id="@+id/homeSem"
        android:layout_marginBottom="10dp"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:textSize="15dp" />

    <TextView
        android:text="Lec Name: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homeSem"
        android:layout_alignStart="@+id/homeSem"
        android:id="@+id/homeLecName"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentStart="true"
        android:textSize="15dp" />

    <TextView
        android:text="Job No: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/homeLecRegNo"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/homeLecName"
        android:textSize="15dp" />

    <Button
        android:text="Scan Exam Card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homeRegs"
        android:layout_alignStart="@+id/homeLecRegNo"
        android:layout_marginTop="20dp"
        android:id="@+id/scan"/>

    <Button
        android:text="Exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exitApp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignBaseline="@+id/scan"
        android:layout_alignBottom="@+id/scan"
        android:layout_alignEnd="@+id/homeLecRegNo" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/homeUnitCode"
        android:layout_toStartOf="@+id/scan"
        android:layout_width="0dp"
        android:layout_height="80dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        app:srcCompat="@drawable/must"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/proffPic"
        android:layout_above="@+id/homeUnitCode"
        android:layout_alignStart="@+id/exitApp" />

    <TextView
        android:text="30 Registered Students"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/homeRegs"
        android:textColor="#00f"
        android:textSize="18dp"
        android:layout_below="@+id/homeLecRegNo"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
</ScrollView>